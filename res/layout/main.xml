    android:layout_height="160dp" >

    <Button
        android:id="@+id/sms"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/sms1" />

    <Button
        android:id="@+id/call"
        android:layout_width="80dp"
